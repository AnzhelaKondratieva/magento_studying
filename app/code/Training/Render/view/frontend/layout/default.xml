<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.top">
            <block name="training.content.top.info" template="Training_Render::top-info.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="testargument" template="Training_Render::test.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">lightskyblue</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="layout.debug" template="Training_Render::layout-debug.phtml"/>
        </referenceContainer>
    </body>
</page>
